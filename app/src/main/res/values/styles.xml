<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionbar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Bottom_term_white">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Bottom_term_Yellow">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Product_Id_HintText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Drak_Gray</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Say_Something_Text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/Drak_Gray</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Not_match_Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Sweet_Red</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="Delivery_success_Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="QuickBold_Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <style name="Rubik_16_Black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="Header_Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="Rubik_16_Light_DarkBlack">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Light_DarkBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/rubik</item>
    </style>


</resources>
